# Docker volume driver
export VOLUME_DRIVER=rbd

# Etcd Endpoints IP
export ETCD_CLIENT_IP=172.23.7.63

# Etcd Path For Mongo-config
export CLUSTER_PATH=/mongo-config/rs0

# For docker swarm cluster
export DOCKER_SWARM_URI="tcp://localhost:9999"
export COMPOSE_OPT="-H ${DOCKER_SWARM_URI}"

# Versions
export MONGO_VERSION=latest

# Mongodb Information
export MONGO_INITDB_ROOT_USERNAME=siteRootAdmin
export MONGO_INITDB_ROOT_PASSWORD=password
export REPLSET_NAME=rs0
