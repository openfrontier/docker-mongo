# Docker volume driver
export VOLUME_DRIVER=rbd

# Etcd Endpoints IP
export ETCD_CLIENT_IP=${ETCD_CLIENT_IP}

# Etcd Path For Mongo-config
export CLUSTER_PATH=${CLUSTER_PATH}

# For docker swarm cluster
export DOCKER_SWARM_URI=${DOCKER_SWARM_URI}
export COMPOSE_OPT="-H ${DOCKER_SWARM_URI}"

# Versions
export MONGO_VERSION=latest

# Mongodb Information
export MONGO_INITDB_ROOT_USERNAME=${MONGO_INITDB_ROOT_USERNAME}
export MONGO_INITDB_ROOT_PASSWORD=${MONGO_INITDB_ROOT_PASSWORD}
export REPLSET_NAME=${REPLSET_NAME}

# Haproxy Information,The first mongo container(rs0node1) is primary,definition in initiate.sh.
export HAPROXY_NODE=${HAPROXY_NODE}
export MONGO_PRIMARY=rs0node1

